{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "never"
        ],
        "eol-last": "warn",
        "no-trailing-spaces": "warn",
        "space-in-parens": "warn",
        "no-multi-spaces": "warn",
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-implicit-any": "off",
        "@typescript-eslint/no-empty-function": "off",
        "template-curly-spacing": [
            "error",
            "never"
        ],
        "spaced-comment": [
            "warn",
            "always",
            {
                "block": {
                    "balanced": true
                }
            }
        ]
    }
}